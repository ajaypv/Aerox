<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
                                                   android:background="@color/githubbackgroungcolors"
    tools:context="com.aeroxlive.aeroxapplication.PaymentPage">


    <LinearLayout
            android:layout_margin="10dp"
            android:id="@+id/FileinfoItem"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:orientation="vertical" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.032" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.6">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:background="@drawable/circular_grey_bordersolid"
                android:layout_marginTop="20dp"
        >
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"

                    android:gravity="center_vertical">

                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="6dp"
                        android:background="@drawable/circular_grey_bordersolid"
                        android:src="@drawable/baseline_timelapse" app:tint="@color/blue"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/proximanovaregular"
                            android:text="Print-out Waiting Time"
                            android:textColor="@color/blue"
                            android:textSize="16sp"
                            android:textStyle="bold"/>


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/proximanovaregular"
                        android:text="5-6 min"
                        android:textColor="@color/blue"
                        android:textSize="20sp"
                        android:textStyle="bold"/>


            </LinearLayout>


            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical">

                <ImageView
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:padding="1dp"
                        android:src="@drawable/circleyellowfil"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/circularbordersolidhistory"
                android:orientation="vertical"
        >

            <TextView
                    android:text="----- BILL SUMMARY ------"
                    android:textColor="@color/black"
                    android:textSize="20sp"

                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content" android:id="@+id/textView"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:paddingBottom="5dp"
            >

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical">

                    <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="6dp"
                            android:background="@drawable/circular_grey_bordersolid"
                            android:src="@drawable/baseline_format_color_fill_24" app:tint="@color/blue"/>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/proximanovaregular"
                                android:text="Printing Color"

                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:fontFamily="@font/proximanovaregular"
                                android:text="@string/black_white"
                                android:id="@+id/printColor_name"
                                android:textSize="14sp"/>
                    </LinearLayout>
                    <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                           android:layout_gravity="bottom"
                            android:orientation="vertical">


                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:fontFamily="@font/proximanovaregular"
                                android:drawableLeft="@drawable/baseline_currency_rupee_18"
                                android:text="2"

                                android:textColor="@color/black"
                                android:drawableTint="@color/black"
                                android:id="@+id/Color_print_price"
                                android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:paddingBottom="5dp"
            >

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center_vertical">

                    <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="6dp"
                            android:id="@+id/image_sides"
                            android:background="@drawable/circular_grey_bordersolid"
                            android:src="@drawable/baseline_filter_1_" app:tint="@color/blue"/>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/proximanovaregular"
                                android:text="Single Side "
                               android:id="@+id/print_sides_display"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:fontFamily="@font/proximanovaregular"
                                android:text="10 pages"
                                android:id="@+id/TotalPageforPages"
                                android:textSize="14sp"/>
                    </LinearLayout>
                    <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/proximanovaregular"
                                android:text="2"
                                android:drawableLeft="@drawable/baseline_currency_rupee_18"
                                android:textColor="@color/black"
                                android:drawableTint="@color/black"
                                android:textSize="15sp"
                                android:id="@+id/print_sheet_side_price"
                                android:textStyle="bold"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:fontFamily="@font/proximanovaregular"
                                android:drawableLeft="@drawable/baseline_currency_rupee_18"
                                android:text="10"

                                android:textColor="@color/black"
                                android:drawableTint="@color/black"
                                android:id="@+id/print_sheet_side_total_pages_price"
                                android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:padding="1dp"
                            android:src="@drawable/baseline_currency_rupee" app:tint="@color/black"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/proximanovaregular"
                            android:text="10"
                            android:textColor="@color/black"
                            android:id="@+id/print_sheets_total_price"
                            android:textSize="18sp"/>



                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_margin="5dp"
                    android:padding="5dp"
            >
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"

                        android:gravity="center_vertical">

                    <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="6dp"
                            android:background="@drawable/circular_grey_bordersolid"
                            android:src="@drawable/baseline_plumbing" app:tint="@color/blue"/>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/proximanovaregular"
                                android:text="Binding"
                                android:textColor="@color/black"
                                android:id="@+id/bindingDisplay"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:fontFamily="@font/proximanovaregular"
                                android:text="color"

                                android:id="@+id/displayBindingColor"
                                android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:padding="1dp"
                            android:src="@drawable/baseline_currency_rupee" app:tint="@color/black"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/proximanovaregular"
                            android:text="10"
                            android:textColor="@color/black"
                            android:id="@+id/print_binding_price"
                            android:textSize="18sp"/>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_margin="10dp"
                    android:padding="10dp"
            >
                <LinearLayout
                        android:layout_width="266dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"

                        android:gravity="center_vertical">

                    <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="6dp"
                            android:background="@drawable/circular_grey_bordersolid"
                            android:src="@drawable/baseline_attach_money_24" />

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/proximanovaregular"
                                android:text="TOTAL"
                                android:textColor="@color/black"

                                android:textSize="18sp"
                                android:textStyle="bold"/>


                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:padding="1dp"
                            android:src="@drawable/baseline_currency_rupee" app:tint="@color/black"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/proximanovaregular"
                            android:text="10"
                            android:textColor="@color/black"
                            android:id="@+id/print_total_price"
                            android:textSize="18sp"/>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
        <Button
                android:text="PAY"
                android:textSize="18dp"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:background="@drawable/button_gradient"
                android:drawableRight="@drawable/baseline_payments_24"
                android:layout_height="wrap_content" android:id="@+id/button_print_pay"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>