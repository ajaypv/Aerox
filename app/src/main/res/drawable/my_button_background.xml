<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle">

    <!-- Gradient background -->
    <gradient
            android:startColor="#895cf2"
            android:endColor="#895cf2"
            android:centerColor="#ffabf4"
            android:angle="0"/>

    <!-- Rounded corners -->
    <corners
            android:radius="6dp"/>

    <!-- Border -->
    <stroke
            android:width="1dp"
            android:color="#895cf2"/>

</shape>
